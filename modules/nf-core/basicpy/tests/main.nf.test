nextflow_process {

    name "Test Process BASICPY"
    script "../main.nf"
    process "BASICPY"

    tag "modules"
    tag "modules_nfcore"
    tag "basicpy"

    test("basicpy - OME-TIFF") {

        when {
            process {
                """
                input[0] = [
                                [ id:'test' ],
                                file(params.modules_testdata_base_path + 'imaging/ome-tiff/cycif-tonsil-cycle1.ome.tif', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert file(process.out.dfp.get(0).get(1)).exists() },
                { assert file(process.out.dfp.get(0).get(1)).size() == 633904 },
                { assert file(process.out.ffp.get(0).get(1)).exists() },
                { assert file(process.out.ffp.get(0).get(1)).size() == 633904 },
            )
        }

    }

    test("basicpy - OME-TIFF - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                                [ id:'test' ],
                                file(params.modules_testdata_base_path + 'imaging/ome-tiff/cycif-tonsil-cycle1.ome.tif', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
